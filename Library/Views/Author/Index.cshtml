@using Library.Models;
@using Library.Helpers;
@model IEnumerable<AuthorModel>

@{
    string title = ViewBag.Title;
    string caption = ViewBag.Caption;
    string url = ViewBag.Url;
}

@* Использования хелпера *@
@TableHelper.CreateTable(Html, caption, url, Model,
    author => {
        return $"{Html.ActionLink("Изменить", "EditAuthor", new { id = author.Id }, new { @class = "btn-edit" })}" +
        $"{Html.ActionLink("Удалить", "DeleteAuthor", new { id = author.Id }, new { @class = "btn-delete" })}"; })
