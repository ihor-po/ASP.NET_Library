@using Library.Models;
@{
    string title = ViewBag.Title;
    string caption = ViewBag.Caption;
    string NameError = ViewBag?.NameError;
    string BirthDayError = ViewBag?.BirthDayError;
    string DeathError = ViewBag?.DeathError;
    AuthorModel author = ViewBag?.Author;
}

<form id="CreateAuthorForm" style="align-self:center;" method="post">
<div class="fields author-fields">
    <h2>@caption</h2>
    @CreateForm.FormForAuthor(author, NameError, BirthDayError, DeathError)
    <button type="submit">@((author != null && author?.Id != null) ? "Редактировать" : "Создать")</button>
</div>
</form>
