@using Library.Models;
@using Library.Helpers;
@model IEnumerable<PublisherModel>
@{
    string title = ViewBag.Title;
    string caption = ViewBag.Caption;
    string url = ViewBag.Url;
}

@* Использования хелпера *@
@TableHelper.CreateTable(Html, caption, url, Model,
    publisher => { return $"{Html.ActionLink("Изменить", "EditPublisher", new { id = publisher.Id }, new { @class = "btn-edit" })}" +
        $"{Html.ActionLink("Удалить", "DeletePublisher", new { id = publisher.Id }, new { @class = "btn-delete" })}"; })

