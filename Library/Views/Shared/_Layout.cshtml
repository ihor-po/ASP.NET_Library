
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@((ViewBag?.Title != "") ? ViewBag.Title : "123")</title>
    <link href='@Url.Content("~/Content/Common/css/reset.css")' rel="stylesheet" />
    <link href='@Url.Content("~/Content/Common/css/main.css")' rel="stylesheet" />
    <script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery.maskedinput.min.js")' type="text/javascript"></script>
</head>
<body>
    <div class="conteiner">
        <header class="header">
            <div class="central-part central-part--column central-part--justify-center">
                <div class="header-menu">
                    @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "header-menu__item w-10" })
                    @Html.ActionLink("Издатели", "Index", "Publisher", null, new { @class = "header-menu__item" })
                    @Html.ActionLink("Авторы", "Index", "Author", null, new { @class = "header-menu__item" })
                    @Html.ActionLink("Книги", "Index", "Book", null, new { @class = "header-menu__item" })
                    @Html.ActionLink("Роли", "Index", "Book", null, new { @class = "header-menu__item" })
                    @Html.ActionLink("Пользователи", "Index", "Book", null, new { @class = "header-menu__item" })
                </div>
            </div>
        </header>
        <main class="main main--justify-start main--padding-top-2">
            <div class="central-part central-part--justify-center">
                @RenderBody()
            </div>
        </main>
        <footer class="footer">
            @if (IsSectionDefined("Footer"))
            {
                @RenderSection("Footer")
            }
            else
            {
                <span></span>
            }
        </footer>
    </div>
</body>
</html>
